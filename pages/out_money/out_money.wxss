page{
  background: #F2F2F2;
}
.top{
  width: 95%;
  height: 225rpx;
  margin: 40rpx auto;
  background-color: white;
  text-align: center;
  border: 1px #d7d7d7 solid;
}
.top>view>text{
  display: inline-block;
  width: 500rpx;
  font-weight: bold;
  font-size: 38rpx;
  margin-top: 50rpx;
}
.top>view>text:nth-of-type(2){
  margin-top: 20rpx;
}
.con{
  width: 95%;
  height: 278rpx;
  background: white;
  margin: 0 auto;
  border: 1px #d7d7d7 solid;
  margin-top: 140rpx;
}
.con_top{
  width: 100%;
  height: 110rpx;
  border-bottom: 1px #d7d7d7 solid;
  line-height: 110rpx;
}
.con_top>text{
  display: inline-block;
  float: left;
  font-size: 34rpx;
  margin-left: 20rpx;
}
.con_top>text:nth-of-type(2){
  font-size: 28rpx;
  color: #C9C9C9;
  float:right;
  margin-left: 0rpx;
  margin-right: 20rpx;
}
.con_con>view{
  width: 127rpx;
  height: 80rpx;
  text-align: right;
  float: left;
  font-size: 34rpx;
  line-height: 90rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.con_con>input{
  margin: 0px;
  padding: 0px;
  width: 400rpx;
  height: 80rpx;
  margin-top: 20rpx;
  display: inline-block;
  float: left;
  border-bottom: 1px #d7d7d7 solid;
  margin-left: 30rpx;
  line-height: 80rpx;
}
.con_con>text{
  display: inline-block;
  width: 72%;
  height: 30rpx;
  font-size: 22rpx;
  margin-left: 34rpx;
}
.con_con>text:nth-of-type(2){
  width: 100rpx;
  color: #169BD5;
  font-size: 24rpx;
}
.footer{
  width: 96%;
  height: 200rpx;
  margin: 55rpx auto;
}
.footer>button{
  display: block;
  width: 100%;
  height: 90rpx;
  background: #169BD5;
  color: white;
  font-size: 38rpx;
  line-height: 60rpx;
}