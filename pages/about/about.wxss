page{
  background: #F2F2F2;
}
.con{
  width: 96%;
  background: white;
  margin: 30rpx auto;
}
.con>view{
  width: 100%;
  text-align: center;
}
.con>view>text{
  width: 100%;
  font-size: 56rpx;
  font-weight: bold;
  display: inline-block;
  float: left;
  margin-top: 60rpx;
}
.con>view>text:nth-of-type(2){
  font-size: 30rpx;
  margin-top: 40rpx;

}
.con>view>image{
  margin: 40rpx;
}
.lian{
  width: 100%;
  height: 160rpx;
}
.lian>button{
  width: 70%;
  height: 80rpx;
  background: #33CC00;
  color: white;
  margin-top: 60rpx;
  font-size: 38rpx;
}