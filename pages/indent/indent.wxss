/* pages/indent/indent.wxss */
.body{
  width: 100%;
  height: 100vh;
  background-color: #F2F2F2;
}
.zhanwei{
  width: 100%;
  height: 50rpx;
  background-color: #F2F2F2;
}
.content{
  width: 100%;
  height: 130rpx;
  background-color: white;
  border-bottom: 1rpx solid #E4E4E4;
}
.small_con{
  width: 90%;
  height: 130rpx;
  margin: 0 auto;
}
.con_left{
  width: 30%;
  height: 130rpx;
  color: #868686;
  line-height: 130rpx;
  font-weight: bold;
  text-align: center;
  float: left;
  font-size: 32rpx;
}
.con_right{
  width: 70%;
  height: 130rpx;
  color: #868686;
  line-height: 130rpx;
  font-weight: bold;
  float: left;
  font-size: 32rpx;
}
.cont_left{
  width: 30%;
  height: 130rpx;
  color: #666666;
  line-height: 130rpx;
  font-weight: bold;
  float: left;
  text-indent: 25rpx;
  font-size: 32rpx;
}
.cont_right{
  width: 70%;
  height: 130rpx;
  color: #868686;
  line-height: 130rpx;
  font-weight: bold;
  float: left;
  font-size: 30rpx;
  text-align: right;
}
.cont_right image{
  width: 25rpx;
  height: 25rpx;
}
conu_left{
  width: 20%;
  height: 130rpx;
  color: #666666;
  font-weight: bold;
  float: left;
  text-indent: 25rpx;
  font-size: 32rpx;
}
.photo{
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border: 1rpx solid #E4E4E4;
}
.photo_left{
  width: 30%;
  height: 200rpx;
  float: left;
}
.photo_top{
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #666666;
  line-height: 150rpx;
  text-align: center;
}
.photo_bottom{
  width: 100%;
  height: 100rpx;
  text-align: center;
  color: #666666;
  font-size: 24rpx;
  line-height: 60rpx;
}
.photo_right{
  width: 100rpx;
  height: 200rpx;
  float: right;
  display: flex;
  justify-content: center;
  align-items: center;
}
.photo_right image{
  width: 30rpx;
  height: 40rpx;
  background-color: yellow;
}
.submit{
  width: 96%;
  height: 100rpx;
  background-color: #33CCFF;
  margin: 0 auto;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  line-height: 100rpx;
 
}
.box{
  width: 100%;
  margin-top: 40rpx; 
