}
.tel{
  width: 100%;
  height: 82rpx;
  border-bottom: 1px #E8E9EB solid;
  line-height: 82rpx;
  margin-top: 40rpx;
  font-weight: bold;
}
.tel_ma>text{
  display: inline-block;
  float: left;
}
.weui-input{
  height: 82rpx;
  float: left;
  margin-left: 20rpx;
  font-weight: normal;
}
.tel_ma{
  width: 100%;
  height: 82rpx;
  border-bottom: 1px #E8E9EB solid;
  line-height: 82rpx;
}
.tel_ma>view{
  width: 170rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #169BD5;
  color: white;
  font-size: 20rpx;
  font-weight: normal;
  float: left;
  margin: 15rpx;
  border-radius: 10rpx;
  margin-left: 160rpx;
