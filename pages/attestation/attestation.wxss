}
.user{
  width: 100%;
  height: 82rpx;
  border-bottom: 1px #E8E9EB solid;
  line-height: 82rpx;
  text-indent: 0rpx;
}
.user>text{
  margin-left: -11rpx;
}
.user>image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 25rpx;
  float: left;
  margin-left: 20rpx;
}
.con_two{
  width: 100%;
}
.con_two>view{
  font-size: 24rpx;
  text-indent: 20rpx;
  line-height: 82rpx;
}
.con_two>view:nth-of-type(1){
  border-bottom: 1px #ddd solid;
  height: 82rpx;
  line-height:90rpx; 
  font-weight: bold;
}
.con_two>view:nth-of-type(2){
  width: 96%;
  height: 82rpx;
  border-bottom: 1px #ddd solid;
  margin-left: 20rpx;
  text-indent: 0rpx;

}
.con_two>view:nth-of-type(3){
  width: 100%;
  height: 82rpx;
  border-bottom: 1px #ddd solid;
}
.con_two>view>text{
  display: inline-block;
  float: left;
}
.con_two>view>input{
  float: left;
  height: 82rpx;
}
.footer{
  width: 100%;
  margin-top: 14rpx;
}
.footer>button{
  width: 96%;
  height: 88rpx;
