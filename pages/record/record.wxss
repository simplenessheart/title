page{
  background-color: #F2F2F2;
}
.con{
  width: 100%;
  background-color: white;
  margin-top: 50rpx;
}
.nav{
  width: 100%;
  height: 200rpx;
  border-bottom: 1px #E8E8E8 solid;
  background-color: white;
}
.img{
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  float: left;
  margin-right: 30rpx;
}
.img>image{
  width: 160rpx;
  height: 160rpx;
  background: red;
  /* margin: 0 auto; */
  margin-left: 30rpx;
  margin-top: 22rpx;
  float: left;
}
.con_con{
  float: left;
  width: 200rpx;
  height: 200rpx;
  text-align: left;
}
.con_con>text{
  display: inline-block;
  float: left;
  width: 300rpx;
  height: 30rpx;  
  line-height: 30rpx;
  font-size: 29rpx;
  margin-top: 30rpx;
}
.con_con>text:nth-of-type(1){
  margin-top: 32rpx;
  font-size: 40rpx;
}
.con_left{
  width: 200rpx;
  height: 200rpx;
  float: right;
  margin-right: 20rpx;
  line-height: 200rpx;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
}